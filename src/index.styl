// Imports
@import "rupture";
@import "jeet";

// Rupture Scale
rupture.scale = 0 400px 600px 800px 1050px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl'

// Mixins
boxColor(color) {
  border-color: color;
  .destination {
    background-color: color;
  }
}


// Styles
* {
  box-sizing: border-box;
}

html {
  font-size: 62.5%;
}

body {
  margin: 0;
  padding: 0;
  font-family: sans-serif;
}

h1 {
  display: block;
  margin: 2rem;
  font-size: 4rem;

  img {
    vertical-align: middle;
    width: 100px;
    margin-right: 2rem;
  }
}


form {
  padding: 2rem;
  margin: 0 1rem;
  background: skyblue;
}

+above('m') {
  form {
    position: fixed;
    top: 1rem;
    right:0;
    width: 30%;
  }
}

label {
  font-weight: bold;
  font-size: 1.5rem;
  display: block;
  margin-bottom: 1rem;
}

input, textarea, select {
  font-size: 1.5rem;
  padding: .5rem;
  border: 0;
}

input[name="number"] {
  width: 100px;
}

select, textarea {
  width: 100%;
}

textarea {
  height: 300px;
}

.next-box {
  display: inline-block;
  margin-left: 1rem;
}

button {
  background: #6699cc;
  color: white;
  padding: 1rem;
  margin-left: 1rem;
  border: 0;
  border-radius: 0;
  font-size: 1.5rem;
  font-weight: bold;
  &:hover {
    background: #41709e
  }
}

.input-container {
  overflow: hidden;
  padding: 1rem;

  &:first-of-type,
  &:nth-of-type(2) {
  float:left;
  }

  &:nth-of-type(3) {
    clear: both;
  }
}
 
ul {
  width: 100%;
  list-style:none;
  padding: 0 1rem;
  
  ul {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    padding: .5rem;
    margin-bottom: 1rem;
    overflow: hidden;
    border: 1px dotted lightgrey;
    
    li {
      padding: .5rem 1rem;
      margin: .2rem;
      background: lightblue;
      text-transform: capitalize;
    }
  }
}

.box {
  position: relative;
  padding: 1rem;
  border: 1px solid;
  border-left: 8px solid;
  font-size: 1.4rem;
  margin: .5%
 
  button {
    font-size: 1.3rem;
    margin-left: 0;
    margin-right: 1rem;
  }

  +above('m') {
    width: 68%;
  }
  &.to-garden-shed {
    boxColor(rgb(102, 69, 19))
  }

  &.to-kitchen {
    boxColor(rgb(233, 218, 1))
  }

  &.to-dining-room {
    boxColor(rgb(39, 7, 112))
    color: white;
  }

  &.to-living-room {
    boxColor(rgb(166, 212, 0))
  }

  &.to-box-room {
    boxColor(rgb(21, 116, 53))
    color: white;
  }

  &.to-master-bedroom{
    boxColor(rgb(255, 0, 0))
    color: white;
  }

  &.to-guest-room{
    boxColor(rgb(228, 126, 241))
  }

  &.to-cols-room{
    boxColor(rgb(121, 27, 113))
    color: white;
  }

  &.to-als-room{
    boxColor(rgb(0, 138, 180))
    color: white;
  }

  &.to-bathroom{
    boxColor(rgb(0, 255, 179))
    color: white;
  }
}



.destination {
  position: absolute;
  top: 1rem;
  right: 1rem;
  padding: .5rem;
  color: white;
}

h2 {
  margin: 0 0 1rem 0;
}

/* FIXME: All order-and-filter items are 'it will do for now' styles */
.order-and-filter {
  overflow: hidden;
  margin: 1rem;
  padding: 1rem;
  background: #f0f0f0;
  +above('m') {
    width: 67%;
    margin: 0;
    margin-left: 1.5rem;
  }
  label {
    float: left;
    display: block;
    margin: 1rem;
  }

  select {
    float: right;
    width: 65%;
  }

  select,
  input {
    margin-left: 1rem;
  }
}

